<%= render 'shared/errors' , obj: @user%>
<div class="row">
	<div class="col-md-12">
		<%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
		<div class="form-group">
		 <%= f.label :Username, class: "col-sm-2 control-label"%>
		 <div class="col-sm-8"> 
		    <%= f.text_field :username, class: "form-control", placeholder: "Username", autofocus: true %>
		 </div>
		</div>
		<div class="form-group">
				<%= f.label :Email, class: "col-sm-2 control-label"%> 
			<div class="col-sm-8">
		   		<%= f.email_field :email, class: "form-control", placeholder: "Email", autofocus: true %>
		   </div>
		</div>
		
		<div class="form-group">
		 <%= f.label :password, class: "col-sm-2 control-label"%>
		 <div class="col-sm-8"> 
		    <%= f.password_field :password, class: "form-control", placeholder: "Password", autofocus: true %>
		 </div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
		    <%= f.submit @user.new_record? ? "Sign up" : "Update", class: "btn btn-primary btn-lg" %>
		    </div>
		</div>
		<%end%>
		<div class = "col-xs-4 col-xs-offset-4">
			<%= link_to 'Cancel request and return to articles listing', articles_path %>
		</div>
</div>
</div>